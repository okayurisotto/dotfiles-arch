[settings]
screenchange-reload = true

[global/wm]
margin-top = 5
margin-bottom = 5

[colors]
black =   #000000
red =     #cd3131
green =   #0dbc79
yellow =  #e5e510
blue =    #2472c8
magenta = #bc3fbc
cyan =    #11a8cd
white =   #e5e5e5

[bar/okayurisotto]
background = ${colors.black}
border-size = 4
cursor-click = pointer
fixed-center = false
font-0 = PlemolJP35 Console NF:size=16;1
foreground = ${colors.white}
height = 27
line-size = 3
module-margin-left = 1
module-margin-right = 1
modules-left = bspwm
modules-center = date
modules-right = pulseaudio cpu memory wlan powermenu
padding-left = 1
padding-right = 1
width = 100%
wm-restack = bspwm

[module/bspwm]
type = internal/bspwm

label-empty = %index%
label-empty-foreground = ${colors.white}
label-empty-padding = 2
label-focused = %index%
label-focused-padding = 2
label-focused-underline= ${colors.cyan}
label-occupied = %index%
label-occupied-padding = 2
label-urgent = %index%!
label-urgent-background = ${colors.red}
label-urgent-padding = 2
scroll-down = #bspwm.next
scroll-up = #bspwm.prev

[module/date]
type = internal/date

date = "%Y-%m-%d"
format-underline = ${colors.blue}
interval = 1
label = "%date% %time%"
time = "%H:%M:%S"

[module/pulseaudio]
type = internal/pulseaudio

bar-volume-empty = -
bar-volume-fill = +
bar-volume-foreground-0 = ${colors.green}
bar-volume-foreground-1 = ${colors.green}
bar-volume-foreground-2 = ${colors.green}
bar-volume-foreground-3 = ${colors.green}
bar-volume-foreground-4 = ${colors.green}
bar-volume-foreground-5 = ${colors.yellow}
bar-volume-foreground-6 = ${colors.red}
bar-volume-gradient = false
bar-volume-indicator = /
bar-volume-width = 10
format-underline = ${colors.green}
format-volume = <label-volume> <bar-volume>
label-muted = VOL: muted
label-volume = VOL %percentage%%

[module/cpu]
type = internal/cpu

format-prefix = "cpu: "
format-prefix-foreground = ${colors.white}
format-underline = #f90000
interval = 2
label = %percentage:2%%

[module/memory]
type = internal/memory

format-prefix = "memory: "
format-prefix-foreground = ${colors.white}
format-underline = #4bffdc
interval = 2
label = %percentage_used%%

[module/wlan]
type = internal/network

format-connected = "wlan: <ramp-signal>"
format-connected-underline = #9f78e1
format-disconnected =
interface = wlan0
interval = 3.0
ramp-signal-0 = "/----"
ramp-signal-1 = "+/---"
ramp-signal-2 = "++/--"
ramp-signal-3 = "+++/-"
ramp-signal-4 = "++++/"

[module/powermenu]
type = custom/menu

format-spacing = 1
label-close = cancel
label-close-foreground = ${colors.white}
label-open = ?
label-open-foreground = ${colors.white}
label-separator = /
label-separator-foreground = ${colors.white}
menu-0-0 = reboot
menu-0-0-exec = systemctl reboot
menu-0-1 = power off
menu-0-1-exec = systemctl poweroff
menu-0-2 = supend
menu-0-2-exec = systemctl suspend
